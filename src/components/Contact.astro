---
interface Props {
  email?: string;
  website?: string;
  github?: string;
  linkedin?: string;
  twitter?: string;
  huggingface?: string;
  medium?: string;
  pypi?: string;
}

const { email, website, github, linkedin, twitter, huggingface, medium, pypi } = Astro.props;
---

<section id="contact" class="contact">
  <div class="container">
    <h2 class="section-title">Get In Touch</h2>
    <div class="contact-content">
      <p class="contact-intro">
        Feel free to reach out for collaborations or just a friendly chat.
      </p>
      <div class="contact-links">
        {email && (
          <a href={`mailto:${email}`} class="contact-link">
            {email}
          </a>
        )}
        {website && (
          <a href={website} target="_blank" rel="noopener noreferrer" class="contact-link">
            Website
          </a>
        )}
        {github && (
          <a href={`https://github.com/${github}`} target="_blank" rel="noopener noreferrer" class="contact-link">
            GitHub
          </a>
        )}
        {linkedin && (
          <a href={linkedin} target="_blank" rel="noopener noreferrer" class="contact-link">
            LinkedIn
          </a>
        )}
        {twitter && (
          <a href={`https://twitter.com/${twitter.replace('@', '')}`} target="_blank" rel="noopener noreferrer" class="contact-link">
            Twitter
          </a>
        )}
        {huggingface && (
          <a href={huggingface} target="_blank" rel="noopener noreferrer" class="contact-link">
            HuggingFace
          </a>
        )}
        {medium && (
          <a href={medium} target="_blank" rel="noopener noreferrer" class="contact-link">
            Medium
          </a>
        )}
        {pypi && (
          <a href={pypi} target="_blank" rel="noopener noreferrer" class="contact-link">
            PyPI
          </a>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    background-color: var(--color-bg-alt);
  }
  
  .contact-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }
  
  .contact-intro {
    font-size: 1rem;
    margin-bottom: var(--spacing-lg);
    line-height: 1.6;
    color: var(--color-text-secondary);
  }
  
  .contact-links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    justify-content: center;
    align-items: center;
  }
  
  .contact-link {
    padding: var(--spacing-sm) var(--spacing-lg);
    background-color: transparent;
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    transition: var(--transition);
    font-weight: 500;
    font-size: 0.95rem;
  }
  
  .contact-link:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    transform: translateY(-2px);
  }
  
  @media (max-width: 768px) {
    .contact-content {
      padding: 0 var(--spacing-md);
    }
    
    .contact-intro {
      font-size: 0.95rem;
      margin-bottom: var(--spacing-md);
    }
    
    .contact-links {
      flex-direction: column;
      width: 100%;
      gap: var(--spacing-sm);
    }
    
    .contact-link {
      width: 100%;
      max-width: 300px;
      padding: var(--spacing-sm) var(--spacing-md);
    }
  }
  
  @media (max-width: 480px) {
    .contact-content {
      padding: 0;
    }
    
    .contact-intro {
      font-size: 0.9rem;
    }
    
    .contact-link {
      max-width: 100%;
      font-size: 0.9rem;
      padding: var(--spacing-sm);
    }
  }
</style>
