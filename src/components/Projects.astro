---
interface Project {
  title: string;
  description: string;
  url?: string;
  github?: string;
  technologies: string[];
  featured?: boolean;
}

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<section id="projects" class="projects">
  <div class="container">
    <h2 class="section-title">Projects</h2>
    <div class="projects-list">
      {projects.map((project) => (
        <article class="project-card card">
          <div class="project-header">
            <h3>{project.title}</h3>
            <div class="project-links">
              {project.url && (
                <a href={project.url} target="_blank" rel="noopener noreferrer" class="btn btn-secondary">
                  View Live
                </a>
              )}
              {project.github && (
                <a href={project.github} target="_blank" rel="noopener noreferrer" class="btn btn-github" aria-label="View on GitHub">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              )}
            </div>
          </div>
          <p>{project.description}</p>
          <div class="project-technologies">
            {project.technologies.map((tech) => (
              <span class="tech-tag">{tech}</span>
            ))}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .projects-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }
  
  .project-card {
    padding: var(--spacing-lg);
  }
  
  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: var(--spacing-md);
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }
  
  .project-card h3 {
    margin-bottom: var(--spacing-xs);
    font-size: 1.5rem;
    color: var(--color-text);
  }
  
  .project-card p {
    margin-bottom: var(--spacing-md);
    line-height: 1.7;
  }
  
  .project-technologies {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
    margin-top: var(--spacing-md);
    padding-top: var(--spacing-md);
    border-top: 1px solid var(--color-border);
  }
  
  .tech-tag {
    background-color: var(--color-bg-alt);
    color: var(--color-text);
    padding: 0.25rem 0.75rem;
    border-radius: calc(var(--border-radius) / 2);
    font-size: 0.85rem;
    font-family: var(--font-mono);
  }
  
  .project-links {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }
  
  .project-links .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-align: center;
    font-size: 0.9rem;
    padding: var(--spacing-xs) var(--spacing-md);
    white-space: nowrap;
  }
  
  .btn-github {
    min-width: auto;
  }
  
  .btn-github svg {
    flex-shrink: 0;
  }
  
  .btn-github:hover svg {
    color: white;
  }
  
  @media (max-width: 768px) {
    .projects-list {
      gap: var(--spacing-md);
    }
    
    .project-card {
      padding: var(--spacing-md);
    }
    
    .project-header {
      flex-direction: column;
      gap: var(--spacing-sm);
      margin-bottom: var(--spacing-sm);
    }
    
    .project-card h3 {
      font-size: 1.25rem;
    }
    
    .project-card p {
      line-height: 1.6;
    }
    
    .project-links {
      width: 100%;
    }
    
    .project-links .btn {
      flex: 1;
      justify-content: center;
    }
    
    .tech-tag {
      font-size: 0.8rem;
      padding: 0.2rem 0.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .projects-list {
      gap: var(--spacing-sm);
    }
    
    .project-card {
      padding: var(--spacing-sm) var(--spacing-md);
    }
    
    .project-card h3 {
      font-size: 1.125rem;
    }
    
    .project-card p {
      font-size: 0.9rem;
      margin-bottom: var(--spacing-sm);
    }
    
    .project-links {
      flex-direction: column;
    }
    
    .project-links .btn {
      width: 100%;
      font-size: 0.85rem;
      padding: var(--spacing-sm);
    }
    
    .project-technologies {
      margin-top: var(--spacing-sm);
      padding-top: var(--spacing-sm);
    }
    
    .tech-tag {
      font-size: 0.75rem;
      padding: 0.15rem 0.4rem;
    }
  }
</style>
