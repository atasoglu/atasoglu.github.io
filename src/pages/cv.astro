      <section class="cv-section cv-introduction">
        <h2>Introduction</h2>
        <ul>
          {cv.introduction.map((item) => (
            <li set:html={item} />
          ))}
        </ul>
      </section>
    )}

    <section class="cv-section">
      <h2>Experience</h2>
      {cv.experience.map((item) => (
        <article class="cv-item">
          <div class="item-top">
            <div class="item-left">
              <p class="strong-inline">{item.company}</p>
              <p>{item.role}</p>
            </div>
            <div class="item-right">
              <p>{item.date}</p>
              {item.location && <p>{item.location}</p>}
            </div>
          </div>
          <ul>
            {item.bullets.map((bullet) => (
              <li>{bullet}</li>
